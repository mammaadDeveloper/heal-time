# Run the container with `docker run -p 3000:3000 -t heal-time-api`.
FROM docker.io/node:lts-alpine

ENV HOST=0.0.0.0
ENV PORT=3000

WORKDIR /app

RUN addgroup --system heal-time-api && \
          adduser --system -G heal-time-api heal-time-api

COPY apps/api/dist heal-time-api/
COPY apps/api/package.json heal-time-api/
RUN chown -R heal-time-api:heal-time-api .

# You can remove this install step if you build with `--bundle` option.
# The bundled output will include external dependencies.
RUN npm --prefix heal-time-api --omit=dev -f install

CMD [ "node", "heal-time-api" ]
